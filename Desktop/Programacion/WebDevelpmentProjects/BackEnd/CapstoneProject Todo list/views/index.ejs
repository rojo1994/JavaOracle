<%- include("partials/header.ejs") %>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-md-12">
                    <div class="card px-3">
                        <div class="card-body">
                            <h4 class="card-title">Awesome Todo list</h4>

                            <form method="POST" action="/submit">
                                <div class="add-items d-flex">
                                    <input name="Todo" type="text" class="form-control todo-list-input"
                                        placeholder="What do you need to do today?">
                                    <button type="submit"
                                        class="add btn btn-primary font-weight-bold todo-list-add-btn">Agregar</button>
                                </div>
                                </form>
                                <div class="list-wrapper">
                                    <ul class="d-flex flex-column-reverse todo-list">
                                        <% for (let index = 0; index < TextDisplay.length; index++) { %>
                                        <li>
                                                <input class="checkbox" type="checkbox">  <%= TextDisplay[index] %> 
                                            <% } %>
                                        </li>
                                    </ul>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("partials/footer.ejs") %>